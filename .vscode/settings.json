{
    "files.associations": {
        "spi.h": "c",
        "lvgl.h": "c",
        "stdlib.h": "c",
        "sharp_mip.h": "c",
        "lv_drv_conf.h": "c",
        "array": "c",
        "string": "c",
        "string_view": "c",
        "ranges": "c"
    },
    // These settings tweaks to the cmake plugin will ensure
    // that you debug using cortex-debug instead of trying to launch
    // a Pico binary on the host
    "cmake.statusbar.advanced": {
        "debug": {
            "visibility": "default"
        },
        "launch": {
            "visibility": "default"
        },
        "build": {
            "visibility": "default"
        },
        "buildTarget": {
            "visibility": "hidden"
        }
    },
    "cmake.buildBeforeRun": true,
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cortex-debug.openocdPath": "F:/openocd/src/openocd.exe"
}